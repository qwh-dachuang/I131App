<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">
    >

    <ImageView
        android:id="@+id/AfterHospital1Image1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/afterhospital1_image1" />

    <TextView
        android:id="@+id/AfterHospital1Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:lineSpacingExtra="10sp"
        android:text="        服碘131后回家以后，有条件者用独立卫生间，防止卫生洁具和地面污染，共用卫生间者要注意避免尿液飞溅，便后及时多次反复冲洗。"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/AfterHospital1Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <TextView
        android:id="@+id/AfterHospital1Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-2dp"
        android:lineSpacingExtra="10sp"
        android:text="        服碘后2~3周内应继续回家隔离，避免与家人及周围人群近距离长时间接触（近距离是指1 m之内，长时间是指超过3 h）。对3岁以下儿童及孕妇，避免接触。"
        android:textSize="18sp" />

</LinearLayout>
