<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/first_background" />

    <ImageView
        android:id="@+id/receiveMessage"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_below="@id/imageView"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="120dp"
        android:src="@android:drawable/sym_contact_card" />

    <Button
        android:id="@+id/receiveMessageText"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="234dp"
        android:layout_marginRight="234dp"
        android:layout_marginBottom="249dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="查看提醒" />

    <ImageView
        android:id="@+id/chargePlan"
        android:layout_width="99dp"
        android:layout_height="66dp"
        android:layout_below="@id/imageView"
        android:layout_alignTop="@id/imageView"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="330dp"
        android:src="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/chargePlanText"
        android:layout_width="128dp"
        android:layout_height="48dp"

        android:layout_marginStart="227dp"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="253dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="出院计划" />


</RelativeLayout>
