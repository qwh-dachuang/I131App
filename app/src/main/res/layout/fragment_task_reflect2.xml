<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView62"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="80dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/renwufanxing" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView62"
        android:layout_marginTop="10dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:text="饮食"
        android:textColor="#009688"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/checkBox14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView57"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="您是否坚持按照要求食用低碘（少盐）食物"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox15"
        android:layout_marginTop="10dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:text="用药"
        android:textColor="#009688"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/checkBox15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView63"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="您是否坚持按照要求使用不含碘的药物"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkBox16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox16"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="您是否按照医生的要求按时按量服用药物"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox13"
        android:layout_marginTop="10dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:text="复查"
        android:textColor="#009688"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/checkBox17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView64"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="如果已经到复查的时间（），您是否已经去医院复查"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox17"
        android:layout_marginTop="10dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:text="生活"
        android:textColor="#009688"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/checkBox18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView65"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="出院后在指定其内您是否按照要求与他人保持距离"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/checkBox13"
        android:layout_alignLeft="@id/checkBox13"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="提交" />

</LinearLayout>
    </ScrollView>
</RelativeLayout>
