<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_detail_1"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context=".ItemDetailFragment_beforelearn"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ProcessTital1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="正式预约"
        android:drawableStart = "@android:drawable/ic_menu_help"
        android:textColor="#009688"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/Imageview1"
        android:layout_width="93dp"
        android:layout_height="151dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/detail1image1" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="93dp"
        android:text="     1. 首先，我们要带上医生开的入院证明"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/detail1image2" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:text="     2. 到中法新城院区C栋东区5楼病房"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView04"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="280dp"

        android:text="     3. 填写病史资料，预约治疗时间"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView05"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="clip_horizontal|center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:text="温馨提示：女性患者尽量避开月经期"
        android:textSize="25sp"
        android:textStyle="normal" />

</RelativeLayout>
